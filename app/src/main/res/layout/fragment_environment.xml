<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/envir_btn_aircon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_selected" />

        <Button
            android:id="@+id/envir_btn_leak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/leak_normal" />

        <Button
            android:id="@+id/envir_btn_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pm_normal" />
    </LinearLayout>

    <!-- 空调界面 -->

    <RelativeLayout
        android:id="@+id/envir_layout_aircon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="当前温度："
                android:textColor="@color/white"
                android:textSize="@dimen/main_top_tv" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/aircon_tv_settemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_temp_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="℃"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_degree_tv" />
            </LinearLayout>
        </LinearLayout>
        <!-- 空调底部 按钮 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" 
            android:gravity="center_horizontal"
           
            >

            <Button 
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:background="@drawable/a2"
                />
            
            <Button
                android:id="@+id/aircon_btn_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ac_open"
                android:layout_marginLeft="1dp" />

            <Button
                android:id="@+id/aircon_btn_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ac_mode" 
                />

            <Button
                android:id="@+id/aircon_btn_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_ac_speed" 
                android:layout_marginLeft="1dp"/>

            <Button
                android:id="@+id/aircon_btn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_aca"
                android:layout_marginLeft="1dp" />

            <Button
                android:id="@+id/aircon_btn_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_acr" 
                android:layout_marginLeft="1dp"/>
             <Button 
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:background="@drawable/a2"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <!-- 漏水检测界面 -->

    <RelativeLayout
        android:id="@+id/envir_layout_leak"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:orientation="vertical" >
		 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="当前状态："
                android:textColor="@color/white"
                android:textSize="@dimen/main_top_tv" />
           
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启动监控  |  "
                    android:textColor="@color/white"
                    android:textSize="@dimen/leak_tv" />
 				<ImageView
                android:id="@+id/leak_iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/normal"
                 />
                
                <TextView
                    android:id="@+id/leak_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常"
                    android:textColor="@color/white"
                    android:textSize="@dimen/leak_tv2" 
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- 漏水检测底部按钮 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/leak_btn_off"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_btn_unselect"
                    android:text="关阀"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/leak_btn_wind"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_btn_unselect"
                    android:text="排风"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- PM 2.5界面 -->

    <RelativeLayout
        android:id="@+id/envir_layout_pm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:padding="5dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="空气质量指数："
                android:textColor="@color/white"
                android:textSize="@dimen/main_top_tv" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pm_tv_aqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105"
                    android:textColor="@color/white"
                    android:textSize="@dimen/pm_aqi_tv" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/pm_tv_aqistatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="轻度污染"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <View
                    android:layout_width="400dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="新风状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_top_tv" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/pm_iv_freshair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@android:drawable/alert_light_frame" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:text="湿度："
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_top_tv" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/pm_tv_roomhumi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textSize="@dimen/pm_humi_tv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/main_degree_tv" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- pm2.5 底部按钮 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/pm_btn_wind"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_btn_unselect"
                    android:text="风速"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/pm_btn_power"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_btn_unselect"
                    android:text="开关"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>