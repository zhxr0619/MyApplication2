<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp" >

    <RelativeLayout
        android:id="@+id/welcome_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#1b1b1b"
        android:paddingRight="50dp" >

        <TextView
            android:id="@+id/welcome_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="13:32"
            android:textColor="@color/white"
            android:textSize="@dimen/welcome_wea_tv" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray"
                android:layout_marginRight="4dp" />

            <ImageButton
                android:id="@+id/welcome_ib_setnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_skin" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" 
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <ImageView
                android:id="@+id/welcome_iv_netstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/netstatus_disconneted" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" 
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/welcome_rl_top"
        android:background="#f0f0f0"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/welcome_iv_weat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weather1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" >

                <TextView
                    android:id="@+id/welcome_tv_weattemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.5℃"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />

                <TextView
                    android:id="@+id/welcome_tv_weat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Cloudy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dfmz" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/temp" />

                <TextView
                    android:id="@+id/welcome_tv_roomtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="25.0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="℃"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hum" />

                <TextView
                    android:id="@+id/welcome_tv_roomhumi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="63"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pm2" />

                <TextView
                    android:id="@+id/welcome_tv_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="55 良"
                    android:textColor="@color/black"
                    android:textSize="@dimen/welcome_room_tv" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/welcome_btn_wel"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_pop_btn_unselect"
                    android:text="欢迎"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:background="@color/gray"
                android:padding="1dp" >

                <Button
                    android:id="@+id/welcome_btn_leave"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/selector_pop_btn_unselect"
                    android:text="离开"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_top_tv" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <!-- 底部网络设置按钮   网络连接状态 -->

</RelativeLayout>