<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_bg_color"
    android:orientation="vertical">

    <!-- 好买基金   全部理财 -->

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_title_height"
        android:background="@color/title_bar_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="基金理财"
            android:textColor="@color/title_bar_text_color"
            android:textSize="@dimen/title_bar_center_text" />

        <TextView
            android:id="@+id/hao_allcount_bank_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="银行卡"
            android:textColor="@color/title_bar_text_color"
            android:textSize="15sp" />
    </RelativeLayout>


    <app.univs.cn.myapplication.XListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </app.univs.cn.myapplication.XListView>

</LinearLayout>