<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 好买基金  交易记录 子项 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_record_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_record_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/arrow_right"
            android:singleLine="true"
            android:text="100.00元"
            android:textColor="@color/user_33_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_record_businesstype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/item_record_iv"
            android:text="申购"
            android:textColor="@color/user_33_text_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/item_record_fund_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_record_businesstype_tv"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/item_record_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_record_fundname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="嘉实货币基金"
                android:textColor="@color/user_67_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_record_fundcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="100354"
                android:textColor="@color/user_91_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_record_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_record_money_tv"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/arrow_right"
            android:text="支付成功"
            android:textColor="@color/user_67_text_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_record_money_tv"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/item_record_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_record_fund_ll"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/item_record_iv"
            android:text="05-10"
            android:textColor="@color/user_91_text_color"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/item_record_date_tv"
            android:layout_marginTop="14dp" />
    </RelativeLayout>

</LinearLayout>